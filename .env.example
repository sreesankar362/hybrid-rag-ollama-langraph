# RAG System Environment Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# QDRANT VECTOR DATABASE CONFIGURATION
# =============================================================================
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=

# =============================================================================
# OLLAMA LOCAL LLM CONFIGURATION
# =============================================================================
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_URL=http://ollama:11434

# =============================================================================
# GROQ CLOUD LLM CONFIGURATION (OPTIONAL)
# =============================================================================
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
GROQ_URL=https://api.groq.com/openai/v1

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Streamlit Configuration
STREAMLIT_HOST=0.0.0.0
STREAMLIT_PORT=8501

# =============================================================================
# DOCUMENT PROCESSING CONFIGURATION
# =============================================================================
# Text Splitter Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# Collection Settings
COLLECTION_NAME=hybrid_documents

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================
# FastEmbed Model (default: thenlper/gte-large)
EMBEDDING_MODEL=thenlper/gte-large
EMBEDDING_DIMENSION=1024

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true for development mode
DEBUG=false

# Enable/disable detailed logging
VERBOSE_LOGGING=false

# =============================================================================
# SECURITY SETTINGS (FOR PRODUCTION)
# =============================================================================
# Set strong secret keys for production
SECRET_KEY=your_secret_key_here
JWT_SECRET=your_jwt_secret_here

# CORS settings (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501

# =============================================================================
# DOCKER COMPOSE OVERRIDES
# =============================================================================
# Uncomment and modify these if you need to override Docker Compose settings

# Custom Docker network
# DOCKER_NETWORK=rag_network

# Custom volume paths
# QDRANT_DATA_PATH=./qdrant_data
# OLLAMA_DATA_PATH=./ollama_data

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
# Maximum number of documents to retrieve
MAX_RETRIEVAL_DOCS=10

# Search timeout in seconds
SEARCH_TIMEOUT=30

# LLM generation timeout in seconds
GENERATION_TIMEOUT=60

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable specific features
ENABLE_PDF_UPLOAD=true
ENABLE_HYBRID_SEARCH=true
ENABLE_MMR_SEARCH=true
ENABLE_HEALTH_CHECK=true

# FastEmbed Cache (for embedding models)
FASTEMBED_CACHE_PATH=/root/.cache/fastembed

# Application Configuration
PYTHONUNBUFFERED=1 